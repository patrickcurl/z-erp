// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["dataProxy"]
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

model Apps {
  id          String @id @default(cuid())
  domain      String @unique
  description String?
  context     String?
  createdAt   DateTime
  updatedAt   DateTime
}

model Users {
  id          String @id @default(cuid())
  email       String @unique
  password    String
  createdAt   DateTime
  updatedAt   DateTime
}

model Tokens {
  id          String @id @default(cuid())
  token       String @unique
  userId      String
  createdAt   DateTime
  updatedAt   DateTime
}

model UserApps {
  id          String @id @default(cuid())
  userId      String
  appId       String
  owner       Boolean @default(false)
  createdAt   DateTime
  updatedAt   DateTime
}
